{
  "name": "HassOS Run On Startup Configurator",
  "version": "0.1",
  "slug": "hassos_run_on_startup_configurator_addon",
  "description": "This runs things at startup. Make sure to disable Protection Mode if you need to! Check logs for information.",
  "arch": ["i386", "amd64", "armhf", "armv7", "aarch64"],
  "startup": "application",
  "url": "http://adamoutler.com",
  "host_network": true,
  "host_ipc": true,
  "host_dbus": true,
  "host_pid": true,
  "auto_uart": true,
  "homeassistant": true,
  "hassio_role": "admin",
  "hassio_api": true,
  "homeassistant_api":true,
  "docker_api":true,
  "privileged":["NET_ADMIN","SYS_ADMIN","SYS_RAWIO","SYS_TIME","SYS_NICE","SYS_RESOURCE","SYS_PTRACE","SYS_MODULE","DAC_READ_SEARCH"],
  "audio":true,
  "video":true,
  "gpio":true,
  "stdin":true,
  "devices": ["/mnt:/mnt:rwm"],
  "full_access": "yes",
  "boot": "auto",
  "devicetree": true,
  "usb": true,
  "map": ["config:rw", "ssl:rw","addons:rw","media:rw","backup:rw","share:rw"],
  "options": {"command":"ls"},
  "schema": {"command":"str"}
}
